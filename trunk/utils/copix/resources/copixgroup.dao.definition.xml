<daodefinition version="1.0">

 <datasource>
   <tables>
      <table name="copixgroup" primary="yes" />
   </tables>
 </datasource>

 <properties>
  <property name="id_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.id_cgrp"
         pk="true"
         required="yes"
         type="numeric"
         />

  <property name="name_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.name_cgrp"
         type="string"
         maxlength="50"
         required="yes"
         />

  <property name="description_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.description_cgrp"
         type="string"
         maxlength="255"
         required="yes"
         />

  <property name="all_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.all_cgrp"
         type="int"
         maxlength="1"
         required="no"
         />
         
  <property name="known_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.known_cgrp"
         type="int"
         maxlength="1"
         required="no"
         />

  <property name="isadmin_cgrp"
         captioni18n="copix:profile.dao.CopixGroup.fields.isadmin_cgrp"
         type="int"
         maxlength="1"
         required="no"
         />
 </properties>
</daodefinition>