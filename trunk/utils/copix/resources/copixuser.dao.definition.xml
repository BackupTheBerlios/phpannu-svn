<daodefinition version="1.0">
 <datasource>
   <tables>
      <table name="copixuser" primary="yes" />
   </tables>
 </datasource>

 <properties>
  <property name="login_cusr"
         captioni18n="copix:profile.dao.CopixUser.login_cusr"
         pk="true"
         required="yes"
         type="varchar"
         maxlength="50"
         />

  <property name="name_cusr"
         captioni18n="copix:profile.dao.CopixUser.name_cusr"
         type="varchar"
         maxlength="70"
         required="yes"
         />

  <property name="firstname_cusr"
         captioni18n="copix:profile.dao.CopixUser.firstname_cusr"
         type="varchar"
         required="yes"
         maxlength="70"
         />

  <property name="email_cusr"
         captioni18n="copix:profile.dao.CopixUser.email_cusr"
         type="varchar"
         required="yes"
         maxlength="255"
         />
 </properties>
</daodefinition>